<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHighlight">@color/black</item>
    </style>

    <style name="Text.Button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/double_margin</item>
        <item name="android:paddingEnd">@dimen/double_margin</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">@dimen/double_margin</item>

    </style>
</resources>