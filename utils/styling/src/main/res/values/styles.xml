<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHighlight">@color/black</item>
    </style>


    <style name="Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Bold.18">
        <item name="android:textSize">18sp</item>
    </style>



    <style name="Text.Button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/double_margin</item>
        <item name="android:paddingEnd">@dimen/double_margin</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">@dimen/double_margin</item>

    </style>

    <style name="ImagePosterList" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/corner_radius</item>
    </style>


</resources>